// -*- mode: jsonc -*-
{
  // "layeyr": "top", // Waybar at top layer
  "position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 25, // Waybar height (to be removed for auto height)
  "width": 1580, // Waybar width
  "margin-bottom": 8,
  //"spacing": 8, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "custom/media",
    "hyprland/window"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "pulseaudio",
    "network",
    "backlight",
    "battery",
    "power-profiles-daemon",
    "clock",
    "tray"
  ],

  "hyprland/window": {
    "format": "üëâ{title}",
    "rewrite": {
      "kitty": "Kitty",
      "fish": "Fish",
      "$terminal": "Terminal"
    },
    "separate-outputs": false
  },
  
  "hyprland/workspaces": {
    "format": "{name}",
    "format-icons": {
      "1": "ÔÑë",
      "2": "ÔÑë",
      "3": "ÔÑë",
      "4": "ÔÑë",
      "5": "ÔÑë",
      "active": " ÔÑë "
      //"default": "ÔÑë "
    },
    "persistent-workspaces": {
      "*": 5, // 5 workspaces by default on every monitor
      "HDMI-A-1": 3 // but only three on HDMI-A-1
    }
  },
  "tray": {
     "icon-size": 21,
     "spacing": 10,
       "icons": {
     "bluez": "bluetooth",
     "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"

  }
},
  "clock": {
    "timezone": "Asia/Kolkata",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%d-%m-%Y}"
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ÔÉß",
    "format-plugged": "{capacity}% ÔÉß ",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
  },
  "battery#bat2": {
    "bat": "BAT2"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
        "default": "ÔÉß ",
        "performance": "ÔÉß ",
        "balanced": "Ôâé ",
        "power-saver": "ÔÅ¨ "
    }
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "exec": "nmcli radio wifi", 
    "on-click": "networkmanager-dmenu",
    "format-wifi": "{essid} Ôá´  ",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected ‚ö†"
    //"format-alt": "{ifname}: {ipaddr}/{cidr}"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon} {volume}% ",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": " Ôö© {volume}%",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ± ",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "Ôñê ",
      "headset": "Ôñê ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol"
  },
  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/power": {
    "text-size": 5,
    "format" : "‚èª",
    "tooltip": true,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
    "menu-actions": {
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate"
    }
  },

  "custom/wifi": {
    "format": "Ôá´ {}",
    "exec": "nmcli radio wifi", 
    "on-click": "networkmanager-dmenu" 
  }
}
